<h1>Listing links</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link_to link.title, link.url, :target=>"_blank" %></td>
        <td><%= link.description %></td>
        <td>
          <%= link_to link, class: 'btn btn-info' do %>
          <span class="glyphicon glyphicon-search"></span>
          Info
          <% end %>
        </td>
        <td>
          <%= link_to edit_link_path(link), class: 'btn btn-success' do %>
          <span class="glyphicon glyphicon-pencil"></span>
          Edit
          <% end %>
        </td>
        <td>
          <%= link_to link, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
          <span class = "glyphicon glyphicon-trash"></span>
          Destroy
          <% end %>

        </td>
        

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>
